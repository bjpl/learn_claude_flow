{
  "name": "learn-claude-flow",
  "version": "1.0.0",
  "type": "module",
  "description": "Interactive learning tool for Claude Flow documentation with integrated PDF viewer and search",
  "scripts": {
    "dev": "vite --config config/vite.config.ts",
    "dev:docs": "vite --config config/vite.config.ts --mode docs",
    "build": "npm run extract-docs && tsc && vite build --config config/vite.config.ts",
    "build:docs": "npm run extract-docs && tsc && vite build --config config/vite.config.ts --mode docs",
    "build:analyze": "npm run build && npx vite-bundle-visualizer",
    "preview": "vite preview --config config/vite.config.ts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest --config config/vitest.config.ts",
    "test:ui": "vitest --config config/vitest.config.ts --ui",
    "test:unit": "vitest --config config/vitest.config.ts run src/tests/unit",
    "test:integration": "vitest --config config/vitest.config.ts run src/tests/integration",
    "test:a11y": "vitest --config config/vitest.config.ts run src/tests/accessibility",
    "test:performance": "vitest --config config/vitest.config.ts run src/tests/performance",
    "test:coverage": "vitest --config config/vitest.config.ts run --coverage",
    "test:coverage:check": "vitest --config config/vitest.config.ts run --coverage --reporter=json --reporter=text",
    "test:watch": "vitest --config config/vitest.config.ts watch",
    "typecheck": "tsc --noEmit",
    "extract-pdf": "node scripts/extractPdfContent.js",
    "extract-docs": "npx tsx scripts/extractDocumentation.ts",
    "prepare-docs": "npm run extract-pdf && npm run extract-docs",
    "analyze:bundle": "npm run build && du -sh dist/assets/*.js | sort -h"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.9.0",
    "clsx": "^2.1.1",
    "fuse.js": "^7.0.0",
    "lucide-react": "^0.460.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-pdf": "^9.1.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^6.30.1",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.9.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^24.6.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "jest-axe": "^10.0.0",
    "jsdom": "^27.0.0",
    "msw": "^2.11.3",
    "pdf-parse": "^1.1.1",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "terser": "^5.44.0",
    "typescript": "^5.6.3",
    "vite": "^6.0.1",
    "vite-plugin-checker": "^0.11.0",
    "vitest": "^2.1.9"
  },
  "keywords": [
    "claude-flow",
    "documentation",
    "learning-tool",
    "pdf-viewer",
    "search"
  ],
  "author": "",
  "license": "MIT"
}
